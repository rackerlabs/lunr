# Logging config
[formatters]
keys = normal

[handlers]
keys = syslog

[loggers]
keys = root

[formatter_normal]
class = lunr.common.logger.LunrFormatter
format = %(asctime)s %(name)s:%(levelname)-8s %(message)s

[handler_syslog]
class = handlers.SysLogHandler
args = ['/dev/log', handlers.SysLogHandler.LOG_USER]
formatter = normal

[logger_root]
level = INFO
handlers = syslog

