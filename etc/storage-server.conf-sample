# Paster Serve Configuration
[pipeline:main]
pipeline = error-catcher trans-logger storage-server

[app:storage-server]
use = egg:lunr#storage_server

[filter:error-catcher]
use = egg:lunr#error_catcher

[filter:trans-logger]
use = egg:lunr#trans_logger
